{% paginate collection.products by 12 %}
  <div class="collection flex-container">
    <div class="flex-container--one-quarter">
      {% if collection.all_tags.size > 0 %}
        <ul class="collection__filters">
          {% for tag in collection.all_tags %}
            {% unless tag contains 'price-' or tag contains 'vendor-' %}
              {% if current_tags contains tag %}
                <li class="collection__filters--active">
                  {{ tag | link_to_remove_tag: tag }}
                </li>
              {% else %}
                <li>
                  {{ tag | link_to_tag: tag }}
                </li>
              {% endif %}
            {% endunless %}
          {% endfor %}
        </ul>
        <ul class="collection__filters">
          <strong class="collection__filters--heading">{{ 'collections.filter_by' | t: title: 'Price' }}</strong>
          {% if collection.all_tags contains 'price-under-5' %}
            {% if current_tags contains 'price-under-5' %}
              <li class="collection__filters--active">{{ 'Under £5' | link_to_remove_tag: 'price-under-5' }}</li>
            {% else %}
              <li>{{ 'Under £5' | link_to_tag: 'price-under-5' }}</li>
            {% endif %}
            {% if current_tags contains 'price-5-25' %}
              <li class="collection__filters--active">{{ '£5-£25' | link_to_remove_tag: 'price-5-25' }}</li>
            {% else %}
              <li>{{ '£5-£25' | link_to_tag: 'price-5-25' }}</li>
            {% endif %}
            {% if current_tags contains 'price-25-50' %}
              <li class="collection__filters--active">{{ '£25-£50' | link_to_remove_tag: 'price-25-50' }}</li>
            {% else %}
              <li>{{ '£25-£50' | link_to_tag: 'price-25-50' }}</li>
            {% endif %}
            {% if current_tags contains 'price-over-50' %}
              <li class="collection__filters--active">{{ 'Over £50' | link_to_remove_tag: 'price-over-50' }}</li>
            {% else %}
              <li>{{ 'Over £50' | link_to_tag: 'price-over-50' }}</li>
            {% endif %}
          {% endif %}
        </ul>
        <ul class="collection__filters">
          <strong class="collection__filters--heading">{{ 'collections.filter_by' | t: title: 'Vendor' }}</strong>
          {% if collection.all_tags contains 'vendor-house-of-commons' %}
            {% if current_tags contains 'vendor-house-of-commons' %}
              <li class="collection__filters--active">{{ 'House of Commons' | link_to_remove_tag: 'vendor-house-of-commons' }}</li>
            {% else %}
              <li>{{ 'House of Commons' | link_to_tag: 'vendor-house-of-commons' }}</li>
            {% endif %}
            {% if current_tags contains 'vendor-house-of-lords' %}
              <li class="collection__filters--active">{{ 'House of Lords' | link_to_remove_tag: 'vendor-house-of-lords' }}</li>
            {% else %}
              <li>{{ 'House of Lords' | link_to_tag: 'vendor-house-of-lords' }}</li>
            {% endif %}
            {% if current_tags contains 'vendor-uk-parliament' %}
              <li class="collection__filters--active">{{ 'UK Parliament' | link_to_remove_tag: 'vendor-uk-parliament' }}</li>
            {% else %}
              <li>{{ 'UK Parliament' | link_to_tag: 'vendor-uk-parliament' }}</li>
            {% endif %}
          {% endif %}
        </ul>
      {% endif %}
    </div>

    <div class="flex-container--three-quarters">
      {% if collection.image %}
        <header role="banner" class="collection__banner collection__banner--image" style="background-image: url({{ collection.image | img_url: 'x300' }});">
      {% else %}
        <header role="banner" class="collection__banner">
      {% endif %}
        <h1>{{ collection.title }}</h1>
        {% if collection.description != blank %}
          <div class="rte">
            {{ collection.description }}
          </div>
        {% endif %}
      </header>

      <div class="collection__view-sort">
        <div class="collection__view-sort__options">
          <span>List view</span>
          <div class="collection__view-sort__options--group">
            <a href="#">{% include 'icon-grid-view' %}</a>
            <a href="#">{% include 'icon-list-view' %}</a>
          </div>
        </div>
      </div>

      <div class="product-grid">
        <div class="product-grid__products product-grid__products--rows">
          {% for product in collection.products %}

            <div class="product-grid__single">
              <a href="{{ product.url | within: collection }}" class="product-grid__image">
                <img src="{{ product.featured_image.src | img_url: '300x300' }}" alt="{{ product.featured_image.alt | escape }}">
              </a>
              <div class="product-grid__description">
                  <a href="{{ product.url | within: collection }}" class="product-grid__title">{{ product.title }}</a>
                  {{ product.description | truncate: 150 }}
              </div>
              <p class="product-grid__price">
                {% if product.compare_at_price > product.price %}

                  {% if product.price_varies %}
                    {%- assign sale_price = product.price | money -%}
                    {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
                  {% else %}
                    {{ 'products.product.on_sale' | t }}
                    {{ product.price | money }}
                  {% endif %}

                {% else %}

                  {% if product.price_varies %}
                    {%- assign price = product.price | money -%}
                    {{ 'products.product.from_text_html' | t: price: price }}
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}

                {% endif %}

                {% if product.compare_at_price > product.price %}
                  <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                  <s>{{ product.compare_at_price | money }}</s>
                {% endif %}

                {% unless product.available %}
                  {{ 'products.product.sold_out' | t }}
                {% endunless %}
              </p>
            </div>

        {% else %}
          {% if collection.handle == 'all' and collection.all_vendors.size == 0 and collection.all_types.size == 0 %}
            {% for i in (1..8) %}
              <a href="#">
                {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg placeholder-svg--small' }}
              </a>

              <p>
                <a href="#">{{ 'homepage.onboarding.product_title' | t }}</a>
              </p>

              <p>
                {{ 1999 | money }}
              </p>
            {% endfor %}
          {% else %}
            <p>{{ 'collections.general.no_matches' | t }}</p>
          {% endif %}

        {% endfor %}
        </div>
      </div>

      {% if paginate.pages > 1 %}
        {% include 'pagination' %}
      {% endif %}
    </div>
  </div>
{% endpaginate %}
